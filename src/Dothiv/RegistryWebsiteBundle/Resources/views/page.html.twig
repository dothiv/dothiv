<html lang="{{ locale }}">
<head>
    {% set title %}{% spaceless %}
        {% if title|default("")|length > 0 %}{{ title }} |{% endif %} {% trans %}registry.fullname{% endtrans %}
    {% endspaceless %}{% endset %}
    <title>
        {{ title }}
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% stylesheets 'bundles/dothivregistrywebsite/lesscss/3/styles.less' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
    <link rel="shortcut icon" href="{{ asset("bundles/dothivregistrywebsite/images/favicon.png") }}">
    <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:300,600' rel='stylesheet' type='text/css'>
    {% javascripts
    '@DothivAngularJsBundle/Resources/public/angular/angular.js'
    filter='?ngmin,?closureecma5'
    output='js/*.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <!-- Social Media Sharing -->
    <!-- Twitter cards support -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="tldHIV">
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="{% trans %}registry.description{% endtrans %}">
    <meta name="twitter:creator" content="tldHIV">
    {% image '@DothivRegistryWebsiteBundle/Resources/public/images/dothiv-registry-logo.png' %}
    <meta name="twitter:image:src" content="{{ app.request.uriForPath(asset_url) }}">
    {% endimage %}
    <!-- Facebook open graph support -->
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{% trans %}registry.description{% endtrans %}">
    <meta property="og:site_name" content="{% trans %}registry.fullname{% endtrans %}">
    {% image '@DothivRegistryWebsiteBundle/Resources/public/images/dothiv-registry-logo.png' %}
    <meta property="og:image" content="{{ app.request.uriForPath(asset_url) }}">
    {% endimage %}
    <meta property="og:type" content="website">
    <base href="/">
</head>
<body data-ng-app="dotHIVApp">
<div class="outer">
    <header class="page">
        <section class="logo">
            <a href="/" rel="index">
                <h1>
                    {% image '@DothivRegistryWebsiteBundle/Resources/public/images/dothiv-registry-logo.svg' %}
                    <img src="{{ asset_url }}" alt="{% trans %}gmbh.fullname{% endtrans %}" width="120" height="69">
                    {% endimage %}
                    <small>
                        {{ 'gmbh.header.title'|trans|replace({'|': "\n"})|nl2br }}
                    </small>
                </h1>
            </a>
            {% block headernav %}
            <nav>
                <a href="{{ path('dothiv_charity_index', {'locale': locale}) }}" rel="friend met"
                   class="external">{% trans %}
                    gmbh.header.back{% endtrans %}</a>
            </nav>
            {% endblock headernav %}
        </section>
    </header>
</div>
{% block subheader %}
{% for section in registry_content('Collection', 'nav.main')|default({'items': []}).items %}
    {% if loop.first %}
        <div class="outer-texture">
        <nav class="main sections{{ loop.length }}">
    {% endif %}
    <section>
        {% for item in section.items %}
            {% if item.cfMeta.contentType == "String" %}
                <h2>{{ item.value }}</h2>
            {% elseif item.cfMeta.contentType == "Page" %}
                <a href="{{ path('dothiv_registry_content', {'locale': locale, 'page': item.code|replace('.', '/')}) }}">{{ item.title }}</a>
            {% endif %}
        {% endfor %}
    </section>
    {% if loop.last %}
        </nav>
        </div>
    {% endif %}
{% endfor %}
{% endblock subheader %}
<div class="outer">
    <main>
        {% block content %}{% endblock content %}
    </main>
</div>
<div class="outer-grey">
    <footer class="page">
        <article>
            <div class="logo">
                <h2>
                    {% image '@DothivRegistryWebsiteBundle/Resources/public/images/dothiv-registry-logo.svg' %}
                    <img class="logo" src="{{ asset_url }}" alt="{% trans %}gmbh.fullname{% endtrans %}" width="60" height="35">
                    {% endimage %}
                    <small>{% trans %}gmbh.footer.slogan{% endtrans %}</small>
                </h2>
            </div>
            <section>
                {% set tld = registry_content('Block', 'footer.tldHIV') %}
                <p>{{ tld.title }}</p>
                {{ tld.text|markdown }}
            </section>
            {% for page in registry_content('Collection', 'nav.footer').items %}
                {% if loop.first %}
                    <nav>
                {% endif %}
                <a href="{{ path('dothiv_registry_content', {'locale': locale, 'page': page.code|replace('.', '/')}) }}">{{ page.title }}</a>
                {% if loop.last %}
                    </nav>
                {% endif %}
            {% endfor %}
        </article>

    </footer>
</div>
{% block angular_app %}
{% javascripts
    '@DothivRegistryWebsiteBundle/Resources/public/1.2/app.js'
    '@DothivBaseWebsiteBundle/Resources/public/1.2/services/MoneyFormatter.js'
    '@DothivRegistryWebsiteBundle/Resources/public/1.2/controllers/PreregisterFormController.js'
    '@DothivRegistryWebsiteBundle/Resources/public/1.2/controllers/SedoFormController.js'
    '@DothivRegistryWebsiteBundle/Resources/public/1.2/controllers/RegistrarsListController.js'
    filter='?ngmin,?closureecma5'
    output='js/*.min.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock angular_app %}
