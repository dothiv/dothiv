{% extends "DothivRegistryWebsiteBundle:Page:content.html.twig" %}
{% block content %}
    <div class="content-with-aside">
        <article class="content">
            {% for childBlock in page.blocks|default([]) %}
                {% set blocks = [childBlock] %}
                {{ block('cf_section') }}
            {% endfor %}
        </article>
        <aside>
            {% set aside = registry_content('Block', 'aside.register') %}
            {% for childBlock in aside.children|default([]) %}
                {% set blocks = [childBlock] %}
                <article class="content">
                {{ block('cf_section') }}
                </article>
            {% endfor %}
        </aside>
    </div>
{% endblock content %}
