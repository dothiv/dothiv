{% trans_default_domain "charity" %}
<form role="form" novalidate name="{{ code }}Form">
    {% for field in section.children %}
        {% set fieldCode = field.code|replace({"lc.settings.settings.": ""}) %}
        {% if fieldCode ends with "language" %}
            <fieldset>
                <div class="fields-legend">
                    {{ field.text|default()|markdown }}
                </div>
                <div class="fields">
                    <div class="form-group">
                        <label>
                            {{ field.title }}
                        </label> <label>
                            <input type="radio" name="{{ fieldCode }}" data-ng-model="config.{{ fieldCode }}" data-ng-change="updateConfigSettings()" value="en">
                            English </label> <label>
                            <input type="radio" name="{{ fieldCode }}" data-ng-model="config.{{ fieldCode }}" data-ng-change="updateConfigSettings()" value="de">
                            Deutsch </label> <label>
                            <input type="radio" name="{{ fieldCode }}" data-ng-model="config.{{ fieldCode }}" data-ng-change="updateConfigSettings()" value="fr">
                            Français </label> <label>
                            <input type="radio" name="{{ fieldCode }}" data-ng-model="config.{{ fieldCode }}" data-ng-change="updateConfigSettings()" value="es">
                            Español </label>
                    </div>
                </div>
            </fieldset>
        {% endif %}
    {% endfor %}
</form>
