{% trans_default_domain "charity" %}
{% set title %}{{ page.title }}{% endset %}
{% set description %}{{ page.description|default("") }}{% endset %}
{% extends "DothivCharityWebsiteBundle:Page:cfpage.html.twig" %}
{% block content %}
    <article class="blog container">

        <div class="row">
            <div class="span8 offset4">
                <section>
                    <h2>{{ page.title }}</h2>
                    <p><time datetime="{{ page.cfMeta.createdAt|date_w3c }}">{{ page.cfMeta.createdAt|date }}</time></p>
                    {{ parent() }}
                </section>
                <footer>
                    <a href="https://twitter.com/share" class="twitter-share-button" data-text="{{ page.title }}">{% trans %}share.twitter.button{% endtrans %}</a>
                    <div class="fb-like" data-href="{{ app.request.uri }}" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>
                </footer>
            </div>
        </div>

    </article>
{% endblock %}
