<article class="video-fullwidth">
    <header>
        <h2>{{ block.title }}</h2>
        {{ block.text|default("")|markdown }}
    </header>
    <section>
        <iframe width="569" height="320" src="{{ block.video.embed_url }}" allowfullscreen class="video"></iframe>
    </section>
    <footer class="cols3">
        <div>
            {{ block.textMore|default("")|markdown }}
        </div>
        <nav>
            <div>
                <a href="https://twitter.com/share?url={{ block.video.url|url_encode }}&amp;text={{ block.title|url_encode }}" class="twitter-share-button">{% trans %}
                    share.twitter.button{% endtrans %}</a>
            </div>
            <div>
                <div class="fb-like" data-href="{{ block.video.url }}" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>
            </div>
        </nav>
    </footer>
</article>
<hr class="arrow">
