<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    {% set title %}{% spaceless %}
        {% if title|default("")|length > 0 %}{{ title }} |{% endif %}
        {% trans %}dothiv.fullname{% endtrans %}
    {% endspaceless %}{% endset %}
    <title>
        {{ title }}
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% stylesheets '@DothivCharityWebsiteBundle/Resources/public/lesscss/index/styles.less' filter='cssrewrite,?uglifycss' %}
    <link rel="stylesheet" href="{{ asset(asset_url) }}">
    {% endstylesheets %}
    <link rel="shortcut icon" href="{{ asset("bundles/dothivcharitywebsite/images/favicon.png") }}">
    <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:300,600' rel='stylesheet' type='text/css'>
    {% javascripts
    '@angular_js'
    filter='?uglifyjs2'
    output='js/*.min.js' %}
    <script type="text/javascript" src="{{ asset(asset_url) }}"></script>
    {% endjavascripts %}
    <!-- Social Media Sharing -->
    {% set description = description|default('home.who.text'|trans) %}
    <!-- Twitter cards support -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="dotHIV">
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="{{ description }}">
    <meta name="twitter:creator" content="dotHIV">
    {% image '@DothivCharityWebsiteBundle/Resources/public/images/dotHiv-logo.png' %}
    <meta name="twitter:image:src" content="{{ app.request.uriForPath(asset_url) }}">
    {% endimage %}
    <!-- Facebook open graph support -->
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:site_name" content="{% trans %}dothiv.fullname{% endtrans %}">
    {% image '@DothivCharityWebsiteBundle/Resources/public/images/dotHiv-logo.png' %}
    <meta property="og:image" content="{{ app.request.uriForPath(asset_url) }}">
    {% endimage %}
    <meta property="og:type" content="website">
    <meta property="fb:app_id" content="{{ facebook_app_id }}">
    <base href="/">
</head>
<body data-ng-app="dotHIVApp">
<header>
    <div class="header" data-ng-controller="HeaderController" data-ng-class="{expanded: expanded}">
        <div>
            <div class="close-target" data-ng-click="close()"></div>
            <div class="logo">
                <h1>
                    <a href="/" rel="index">
                        {% image '@DothivCharityWebsiteBundle/Resources/public/images/logo.svg' %}
                        <img class="logo" src="{{ asset(asset_url) }}" alt="{% trans %}dothiv.fullname{% endtrans %}">
                        {% endimage %}
                        <small>{% trans %}dothiv.claim{% endtrans %}</small>
                    </a>
                </h1>
            </div>

            <div class="navigation">

                <nav class="meta">
                    {% if app.request.locale|slice(0,2) != 'en' %}
                        <a href="{{ '/en' ~ app.request.pathInfo|slice(3) }}">English</a>
                    {% endif %}
                    {% if app.request.locale|slice(0,2) != 'de' %}
                        <a href="{{ '/de' ~ app.request.pathInfo|slice(3) }}">Deutsch</a>
                    {% endif %}
                    {% if features.profile %}
                        <a href="{{ path('dothiv_charity_account_index', {'locale': app.request.locale}) }}">{% trans %}
                            header.menu.myprofile{% endtrans %}</a>
                    {% endif %}
                </nav>

                <nav class="main">
                    <a href="{{ path('dothiv_charity_about_index', {'locale': app.request.locale}) }}" class="twoline">
                        {% trans %}header.home.aboutHIV{% endtrans %}<br>
                        <small>{% trans %}header.home.aboutHIV.subtitle{% endtrans %}</small>
                    </a>
                    <a href="{{ path('dothiv_registry_content', {'locale': 'en', 'page': 'register'}) }}"
                       class="button">{% trans %}
                        header.bar.registerurl{% endtrans %}</a>
                </nav>

                {% block footernav %}
                    <nav class="footer">
                        <a href="{{ path('dothiv_charity_content', {'page': 'contact', 'locale': app.request.locale}) }}">{% trans %}
                            footer.navi.contact{% endtrans %}</a>
                        <a href="{{ path('dothiv_charity_content', {'page': 'imprint', 'locale': app.request.locale}) }}">{% trans %}
                            footer.navi.imprint{% endtrans %}</a>
                        <a href="{{ path('dothiv_registry_content', {'locale': 'en', 'page': 'report'}) }}">
                            {% trans %}footer.navi.report{% endtrans %}
                        </a>
                    </nav>
                    <nav class="footer">
                        <a class="social-link" href="https://www.facebook.com/dothiv" rel="me">
                            <i class="social charity-icon-facebook"></i>
                            {% trans %}footer.social.facebook{% endtrans %}
                        </a> <a class="social-link" href="https://twitter.com/dotHIV" rel="me">
                            <i class="social charity-icon-twitter"></i>
                            {% trans %}footer.social.twitter{% endtrans %}
                        </a>
                    </nav>
                {% endblock %}

            </div>

            <button class="toggle" type="button" data-ng-click="toggle()">
            <span>
                <span class="sr-only">{% trans %}toggle.nav{% endtrans %}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </span>
            </button>
        </div>
    </div>
    {% if features.pinkbar_clickcounter %}
        {% include "DothivCharityWebsiteBundle:partials:pinkbar_clickcounter.html.twig" %}
    {% endif %}
</header>
{% set page = content('Page', 'home') %}
{% set tiles = page.blocks[0] %}
<div data-ng-cloak data-ng-controller="TilesController" data-ng-show="money">
    <div class="tiles">
        <article>
            <header>
                <h1>{{ tiles.title }}</h1>
                {{ tiles.text|markdown }}
            </header>
            {% for tile in tiles.children|default([]) %}
                <section class="tile {{ tile.code|replace({'tiles.': ''}) }}" data-ng-controller="TileController">
                    <div class="frontside" data-ng-show="!opened" data-ng-click="open()">
                        <h2>{{ tile.title|markdown|striptags('<a><em><strong>')|raw }}</h2>
                        {{ tile.text|markdown }}
                        <button class="opentile" data-ng-click="open()"></button>
                    </div>
                    <div class="backside" data-ng-show="opened">
                        {{ tile.textMore|markdown }}
                        <button class="closetile" data-ng-click="close()"></button>
                    </div>
                </section>
            {% endfor %}
        </article>
    </div>
    <hr class="arrow">
</div>
<main>
    {% set video = page.blocks[1] %}
    <article class="video-fullwidth">
        <header>
            <h2>{{ video.title }}</h2>
            {{ video.text|default("")|markdown }}
        </header>
        <section>
            <iframe width="569" height="320" src="{{ video.video.embed_url }}" allowfullscreen class="video"></iframe>
        </section>
        <footer class="cols3">
            <div>
                {{ video.textMore|default("")|markdown }}
            </div>
            <nav>
                <div>
                    <a href="https://twitter.com/share?url={{ video.video.url|url_encode }}&amp;text={{ video.title|url_encode }}"
                       class="twitter-share-button">{% trans %}share.twitter.button{% endtrans %}</a>
                </div>
                <div>
                    <div class="fb-like" data-href="{{ video.video.url }}" data-layout="button_count" data-action="like"
                         data-show-faces="false" data-share="true"></div>
                </div>
            </nav>
        </footer>
    </article>
    <hr class="arrow">
    {% set visitdomains = page.blocks[2] %}
    <div data-ng-cloak data-ng-controller="CharityHivDomainListController" data-ng-show="domain">
